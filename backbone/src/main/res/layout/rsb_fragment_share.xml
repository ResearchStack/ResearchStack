<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/share_logo_view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/share_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/rsb_share_the_app_title"
        android:layout_marginBottom="16dp"
        style="@style/RsbLearnTitle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rsb_warm_gray"/>

    <TextView
        android:id="@+id/share_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rsb_share_the_app_message"
        android:layout_margin="16dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/share_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>