<?xml version="1.0" encoding="utf-8"?>
<!-- AS throws warning here, but support library supports it -->
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:drawable="@drawable/rsb_tapping_right"
                 tools:ignore="NewApi">

    <target
        android:name="right1_1"
        android:animation="@anim/rsb_show_after_medium_delay"/>

    <target
        android:name="right1_2"
        android:animation="@anim/rsb_show_after_medium_delay"/>

    <target
        android:name="right1_3"
        android:animation="@anim/rsb_show_after_medium_delay"/>

    <target
        android:name="right2_1"
        android:animation="@anim/rsb_hide_after_medium_delay"/>

    <target
        android:name="right2_2"
        android:animation="@anim/rsb_hide_after_medium_delay"/>

    <target
        android:name="right2_3"
        android:animation="@anim/rsb_hide_after_medium_delay"/>

</animated-vector>