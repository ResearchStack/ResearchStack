<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.researchstack.backboneexampleapp">

    <application
        android:name=".BackboneApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BackboneApp">

        <activity android:name="org.researchstack.backboneexampleapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="org.researchstack.backbone.ui.ViewTaskActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.BackboneApp.Survey"
            />

        <activity
            android:name="org.researchstack.foundation.components.web.ui.activities.ViewWebDocumentActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.BackboneApp.Survey"
            />

    </application>

</manifest>
