<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Feature.Chart.TabLayout.Chart" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="Widget.Feature.Chart.EmptyView" parent="">
        <item name="android:background">#d5e8ff</item>
        <item name="emptyIcon">@drawable/rsf_illo_dashboard_empty</item>
        <item name="emptyIconTint">?attr/colorPrimaryDark</item>
        <item name="emptyText">No data recorded yetâ€¦</item>
        <item name="emptyTextAppearance">@style/TextAppearance.Widget.Feature.Chart.EmptyView</item>
    </style>

    <style name="TextAppearance.Widget.Feature.Chart.EmptyView" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Feature.Chart.Chart" parent="">
        <item name="titleText">Amount of pie eaten</item>
        <item name="titleTextColor">@color/rsf_warm_gray</item>
        <item name="titleTextSize">14sp</item>
        <item name="titleTextTypeface">sans-serif-medium</item>
    </style>

    <style name="Widget.Feature.Chart.Chart.Progress">
        <item name="centerTextFormat">@string/rsf_chart_progress_center</item>
        <item name="centerTextColor">?attr/colorPrimary</item>
        <item name="centerTextSize">20sp</item>
        <item name="centerTextTypeface">sans-serif-medium</item>
        <item name="finishText">Finish</item>
        <item name="finishTextColor">@color/rsf_error</item>
        <item name="tabIndicatorColor">@color/rsf_tab_indicator</item>
        <item name="tabTextColor">@color/rsf_tab_text_selected</item>
        <item name="tabSelectedTextColor">@color/rsf_tab_indicator</item>
    </style>

    <style name="Widget.Feature.Chart.Chart.Pie">
        <item name="valueTextFormat">@string/rsf_chart_pie_value</item>
    </style>

    <style name="Widget.Feature.Chart.Chart.Line">
        <item name="valueTextFormat">@string/rsf_chart_pie_value</item>
        <item name="chartXAxisTextColor">@color/rsf_warm_gray</item>
        <item name="chartXAxisTextSize">14sp</item>
        <item name="chartXAxisTextTypeface">sans-serif-medium</item>
        <item name="chartYAxisTextColor">@color/rsf_warm_gray</item>
        <item name="chartYAxisTextSize">14sp</item>
        <item name="chartYAxisTextTypeface">sans-serif-medium</item>
        <item name="expandTintColor">@color/rsf_warm_gray</item>
    </style>

    <style name="Widget.Feature.Chart.Chart.Bar">
        <item name="chartXAxisTextColor">@color/rsf_warm_gray</item>
        <item name="chartXAxisTextSize">14sp</item>
        <item name="chartXAxisTextTypeface">sans-serif-medium</item>
        <item name="chartYAxisTextColor">@color/rsf_warm_gray</item>
        <item name="chartYAxisTextSize">14sp</item>
        <item name="chartYAxisTextTypeface">sans-serif-medium</item>
        <item name="expandTintColor">@color/rsf_warm_gray</item>
    </style>

    <style name="Widget.Feature.Chart.Chart.Title" parent="">
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>