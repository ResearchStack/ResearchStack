        <attr name="chartXAxisTextTypeface" format="string" />
        <attr name="chartYAxisTextColor" format="color" />
        <attr name="chartYAxisTextSize" format="dimension" />
        <attr name="chartYAxisTextTypeface" format="string" />
        <attr name="expandTintColor" format="color" />
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="titleTextTypeface" />
    </declare-styleable>

    <declare-styleable name="BarChartCard">
        <attr name="chartXAxisTextColor" />
        <attr name="chartXAxisTextSize" />
        <attr name="chartXAxisTextTypeface" />
        <attr name="expandTintColor" />
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="titleTextTypeface" />
    </declare-styleable>

</resources>