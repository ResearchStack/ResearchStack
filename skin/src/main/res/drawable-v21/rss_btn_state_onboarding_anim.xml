<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- activated state -->

    <item android:state_activated="true" android:state_enabled="true" android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@integer/rss_btn_pressed_animation_duration" android:propertyName="translationZ" android:valueTo="@dimen/rss_btn_active_pressed_z_material" android:valueType="floatType" />

            <objectAnimator android:duration="0" android:propertyName="elevation" android:valueTo="@dimen/rss_btn_active_elevation_material" android:valueType="floatType" />
        </set>
    </item>

    <item android:state_activated="true" android:state_enabled="true">
        <set>
            <objectAnimator android:duration="@integer/rss_btn_pressed_animation_duration" android:propertyName="translationZ" android:startDelay="@integer/rss_btn_pressed_animation_delay" android:valueTo="0" android:valueType="floatType" />

            <objectAnimator android:duration="0" android:propertyName="elevation" android:valueTo="@dimen/rss_btn_active_elevation_material" android:valueType="floatType" />
        </set>
    </item>

    <!-- base state -->

    <item android:state_enabled="true" android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@integer/rss_btn_pressed_animation_duration" android:propertyName="translationZ" android:valueTo="@dimen/rss_btn_pressed_z_material" android:valueType="floatType" />

            <objectAnimator android:duration="0" android:propertyName="elevation" android:valueTo="@dimen/rss_btn_elevation_material" android:valueType="floatType" />
        </set>
    </item>

    <item android:state_enabled="true">
        <set>
            <objectAnimator android:duration="@integer/rss_btn_pressed_animation_duration" android:propertyName="translationZ" android:startDelay="@integer/rss_btn_pressed_animation_delay" android:valueTo="0" android:valueType="floatType" />

            <objectAnimator android:duration="0" android:propertyName="elevation" android:valueTo="@dimen/rss_btn_elevation_material" android:valueType="floatType" />
        </set>
    </item>

    <!-- disabled state -->

    <item>
        <set>
            <objectAnimator android:duration="0" android:propertyName="translationZ" android:valueTo="0" android:valueType="floatType" />

            <objectAnimator android:duration="0" android:propertyName="elevation" android:valueTo="0" android:valueType="floatType" />
        </set>
    </item>
</selector>