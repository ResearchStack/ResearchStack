<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:divider="@drawable/rsf_divider_empty_16dp"
            android:orientation="vertical"
            android:paddingBottom="56dp"
            android:paddingTop="16dp"
            android:showDividers="middle">

            <org.researchstack.feature.chart.ui.ProgressChartCard
                android:id="@+id/dashboard_chart_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <org.researchstack.feature.chart.ui.PieChartCard
                android:id="@+id/dashboard_chart_pie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <org.researchstack.feature.chart.ui.BarChartCard
                android:id="@+id/dashboard_chart_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <org.researchstack.feature.chart.ui.BarChartCard
                android:id="@+id/dashboard_chart_bar_stacked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <org.researchstack.feature.chart.ui.LineChartCard
                android:id="@+id/dashboard_chart_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <org.researchstack.feature.chart.ui.EmptyView
        android:id="@+id/dashboard_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="gone" />

</FrameLayout>
