<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rss_eligibility_you_are_eligible"
        android:textSize="20sp"
        android:textColor="?attr/colorAccent"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="28dp"
        android:id="@+id/eligible_text"
    />

    <TextView
        android:id="@+id/eligible_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rss_eligibility_tap_below"
        android:layout_below="@+id/eligible_text"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="24dp"
    />

    <org.researchstack.backbone.ui.views.SubmitBar
        android:id="@+id/submit_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
    />

</RelativeLayout>