<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="TextColorPreference">
        <item name="preferenceTextColor">?attr/colorAccent</item>
    </style>

    <style name="StudyOverviewTabStyle">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">#6FFF</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="StudyOverviewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Base.Button.Skin.Onboarding" parent="@style/Widget.AppCompat.Button" tools:ignore="ResourceName">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Skin.Onboarding" parent="@style/Base.Button.Skin.Onboarding" tools:ignore="ResourceName" />

</resources>